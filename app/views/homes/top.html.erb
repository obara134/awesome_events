<div class="container">
  <div class="row">
    <div class="col-8">
      <h1>イベント一覧</h1>
    </div>
    <div class="search-form text-right mt-3 col-4">
      <%= form_with url: search_search_path, method: :get, local: true do |f| %>
        <%= f.text_field :content %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
  </div>

  <% @events.each do |event| %>
    <div class="card mb-4">
      <h5 class="card-header"><%= link_to event.name, event_path(event.id) %></h5>
      <div class="card-text">
        <p class="mt-3"><%= l(event.start_at, format: :long) %> ~ <%= l(event.end_at, format: :long) %></p>
      </div>
    </div>
  <% end %>
  <%= paginate @events%>
</div>

