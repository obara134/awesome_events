<div class='container'>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>イベント名</th>
        <th>イベント詳細</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |event| %>
        <% if event.start_at > Time.zone.now %>
          <tr>
            <td></td>
            <td><%= link_to event.name, event_path(event), class: "event_#{event.id}" %></td>
            <td><%= event.introduction %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
