<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>プロフィール</h1>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:</br>
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <p>
            <%= f.label :名前 %></br>
            <%= f.text_field :name, autofocus: true, id:"user_name" %>
          </p>
        </div>
        <div class="form-group">
          <p>
            <%= f.label :プロフィール画像 %></br>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </p>
        </div>
        <div class="form-group">
          <p>
            <%= f.label :自己紹介 %></br>
            <%= f.text_area :introduction, autofocus: true, id:"user_introduction" %>
          </p>
        </div>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>