<div class="container mt-5">
  <% if flash[:notice] %>
    <p style="color:red" id="notice">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <div class="card mb-4">
    <div class="card-header " >
      <%= attachment_image_tag @user, :profile_image, :fill, 150, 150, format: "jpeg",fallback: "no_image.jpg" %>
      <h5><%= @user.name %></h5>
      </div>
    <div class="card-text">
      <p class="mt-3">自己紹介</p>
      <p><%= @user.introduction %></p>
      <hr>
      <h5 class='mt-3'>参加予定イベント一覧</h5>
      <% @user.ticket_comments.each do |ticket_comment| %>
        <p> <%= ticket_comment.event.name %></p>
      <% end %>
      <hr>
      <h5 class='mt-3'>開催予定イベント</h5>
      <% @user.events.each do |event| %>
        <p class='mt-3'><%= link_to event.name, event_path(event) %></p>
      <% end %>
    </div>
  </div>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user), class: "  fas fa-user-cog edit_user_27083" %></p>
  <% end %>
</div>