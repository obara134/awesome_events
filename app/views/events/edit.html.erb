<% now = Time.zone.now %>

<div class="container">
<h1 class="mt-2">イベント情報編集</h1>

<%= form_with model: @event, local:true do |f| %>

  <% if @event.errors.any? %>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li style="color:red">
          <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :イベント名 %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :イベント開催場所 %>
    <%= f.text_field :place, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :イベント開始時間 %>
    <div>
      <%= f.datetime_select :start_at, start_year: now.year, end_year: now.year + 2 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :イベント終了時間 %>
    <div>
      <%= f.datetime_select :end_at, start_year: now.year, end_year: now.year + 2 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :イベント詳細 %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>

<% end %>
</div>