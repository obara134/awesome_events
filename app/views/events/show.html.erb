<div class="container">
  <% if flash[:notice] %>
    <p style="color:red" id="notice">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <h1 class="mt-5 mb-5"><%= @event.name %></h1>
  <div class="row">
    <div class="col-8">
      <div class="card mb-4">
        <h5 class="card-header" >イベント内容</h5>
        <div class="card-text">
          <p class="mt-3"><%= @event.introduction %></p>
        </div>
      </div>

      <div class="card mb-4">
        <h5 class="card-header">開催時間</h5>
        <div class="card-text">
          <p class="mt-3"><%= l(@event.start_at, format: :long) %> ~ <%= l(@event.end_at, format: :long) %> </p>
        </div>
      </div>

      <div class="card mb-4">
        <h5 class="card-header">開催場所</h5>
        <div class="card-text">
          <p class="mt-3"><%= @event.place %></p>
        </div>
      </div>

      <div class="card mb-2">
        <h5 class="card-header">主催者</h5>
        <div class="card-text">
          <p class="mt-3"><%= @event.user.name %></p>
        </div>
      </div>
    </div>
    <div class="col-4">


      <% if @event.user == current_user %>
        <%= link_to "イベントを編集する", edit_event_path(@event.id), class: "btn btn-info btn-lg btn-block" %>
        <%= link_to "イベントを削除する", event_path(@event.id), class: "btn btn-danger btn-lg btn-block ", method: :delete, "data-confirm" => "本当に削除しますか？" %>
      <% end %>

      <% if @ticket_comment.present? %>
        <% @event.ticket_comments.each do |ticket_comment| %>
              <% if ticket_comment.user == current_user %>
                <div class="comment-delete">
                  <%= link_to "参加をキャンセルする", event_ticket_comment_path(ticket_comment.event, ticket_comment), method: :delete, "data-confirm" => "本当にキャンセルしますか？", class: "btn btn-danger btn-block btn-lg" %>
                </div>
              <% end %>
        <% end %>

      <% elsif user_signed_in? %>
        <button type="button" class="btn btn-primary btn-block btn-lg" data-toggle="modal" data-target="#createTicket">
          参加する
        </button>

        <div class="modal fade" id="createTicket">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">参加コメント</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>

              <%= form_with(model:[@event,@ticket_comment], local: true) do |f| %>
                <div class="modal-body">
                  <% if @event.errors.any? %>
                    <ul>
                      <% @event.errors.full_messages.each do |message| %>
                        <li style="color:red">
                          <%= message %>
                        </li>
                      <% end %>
                    </ul>
                  <% end %>
                  <%= f.text_field :comment, class: "form-control", placeholder: "コメントをここに" %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
                  <%= f.submit "送信", class: "btn btn-primary" %>
                </div>
              <% end %>

            </div>
          </div>
        </div>
      <% else %>
        <%= link_to "参加する", root_path, class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
      <hr>
      <div class="card mb-2">
        <h5 class="card-header">参加者</h5>
        <ul class="list-group list-group-flush">
          <% @event.ticket_comments.each do |ticket_comment| %>
            <li class="list-group-item">
              <%= ticket_comment.user.name %>
              :<%= ticket_comment.comment %>
              <% if ticket_comment.user == current_user %>
                <div class="comment-delete">
                  <%= link_to "参加をキャンセルする", event_ticket_comment_path(ticket_comment.event, ticket_comment), method: :delete %>
                </div>
              <% end %>

            </li>

          <% end %>
        </ul>
      </div>




    </div>
  </div>
</div>