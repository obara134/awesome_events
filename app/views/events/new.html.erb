<% now = Time.zone.now %>

<h1>イベント作成</h1>

<%= form_with model: @event, local:true do |f| %>

  <div class="form-group">
    <%= f.label :イベント名 %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :開催場所 %>
    <%= f.text_field :place, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :イベント開始日時 %>
    <div>
      <%= f.datetime_select :start_at, start_year: now.year, end_year: now.year + 2 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :イベント終了日時 %>
    <div>
      <%= f.datetime_select :end_at, start_year: now.year, end_year: now.year + 2  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :イベント詳細 %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>

  <%= f.submit "イベントの作成" %>

<% end %>


